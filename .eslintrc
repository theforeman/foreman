{
  "plugins": ["patternfly-react"],
  "extends": ["plugin:patternfly-react/recommended"],
  "rules": {
    "import/extensions": "off", # https://github.com/houndci/hound/issues/1419#issuecomment-328727830
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "trailingComma": "es5"
    }],
  },
  "globals": {
    "document": false,
    "escape": false,
    "navigator": false,
    "unescape": false,
    "window": false,
    "$": true,
    "_": true,
    "__": true,
    "n__": true,
    "d3": true
  }
}
