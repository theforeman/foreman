<%= form_for @usergroup do |f| %>
  <%= base_errors_for @usergroup %>
  <%= text_f f, :name %>
  <%= multiple_checkboxes f, :usergroups, @usergroup, Usergroup, :label => _("User Groups") %>
  <%= multiple_checkboxes f, :users, @usergroup, User, :label => "Users" %>
  <%= submit_or_cancel f %>
<% end %>
