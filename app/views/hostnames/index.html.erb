<% title _("Smart Proxy Hostnames") %>

<% title_actions new_link(_("Create Hostname")), help_button %>

<table class="<%= table_css_classes 'table-two-pane table-fixed' %>">
  <thead>
    <tr>
      <th class="col-md-4"><%= sort :name, :as => s_("Name") %></th>
      <% if authorizer.can?(:view_smart_proxies) %>
        <th><%= _("Smart proxies") %></th>
      <% end %>
      <th class="col-md-1"><%= _('Actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @hostnames.each do |hostname| %>
    <tr>
      <td class='display-two-pane ellipsis'><%= link_to_if_authorized(hostname.name,
                                                     hash_for_edit_hostname_path(:id => hostname).merge(:auth_object => hostname, :authorizer => authorizer)) %></td>
      <% if authorizer.can?(:view_smart_proxies) %>
        <td class="ellipsis"><%= hostname.smart_proxies.map(&:to_label).to_sentence %></td>
      <% end %>
      <td>
        <%= action_buttons(display_delete_if_authorized hash_for_hostname_path(:id => hostname).merge(:auth_object => hostname, :authorizer => authorizer),
          :data => { :confirm => _("Delete %s?") % hostname.name } ) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate_with_info @hostnames %>
