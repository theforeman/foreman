<% title(_("Trends for %s") % trend_title(@trend)) %>
<% content_for(:search_bar) { trend_days_filter } %>
<div class="row">
  <div class="stats-well col-md-12">
    <%= render :partial => 'trends/trend_chart', :locals => {:range => range} %>
  </div>
</div>
<div id="legendContainer"></div>
<table class="table">
  <% unless @trend.fact_value.nil? %>
    <thead>
      <tr>
        <th colspan="4"><%= _("Hosts") %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <%= render 'hosts' %>
      </tr>
    </tbody>
  <% end %>
</table>
<%= add_to_dashboard :template => 'trends/trend_chart', :name => _("Trends for %s") % trend_title(@trend), :sizex=>5, :sizey => 1, :data =>{:trend_id => @trend.id, :range => range} %>
