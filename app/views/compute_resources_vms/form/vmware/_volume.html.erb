<%= selectable_f f, :datastore, vsphere_datastores(compute_resource), { }, :class => "span5", :label => _("Data store") %>
<%= text_f f, :name, :class => "col-md-2", :label => _("Name") %>
<%= text_f f, :size_gb,
           :class       => "col-md-2",
           :label => _("Size (GB)") %>
<%= checkbox_f f, :thin, {
           :label => _("Thin provision")},
           "true",
           "false" %>
<%= checkbox_f f, :eager_zero, {
           :label => _("Eager zero")},
           "true",
           "false" %>
