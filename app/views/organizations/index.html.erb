<% title "Organizations" %>

<% title_actions display_link_if_authorized("New Organization", hash_for_new_organization_path),
   link_to("Mismatches Report", mismatches_organizations_path, :class => 'btn'),
   help_path %>

<% if @count_nil_hosts > 0 %>
<div class="alert alert-message alert-block alert">
    <% link = %>
    <strong>Notice:</strong> There are
    <%= link_to "#{@count_nil_hosts} hosts with no organization assigned", hosts_path(:search => "not has organization")  %>
</div>
<% end %>

<table class="table table-bordered table-striped">
  <tr>
    <th><%= sort :name %></th>
    <th>Hosts</th>
    <th></th>
  </tr>
  <% @organizations.each do |organization| %>
    <tr class="<%= cycle("even", "odd") -%>">
      <td><%= link_to organization.to_label, edit_organization_path(organization) %></td>
      <td><%= link_to @counter[organization.id] || 0, hosts_path(:search => "organization = #{organization}") %></td>
      <td>
        <%= action_buttons(
          display_link_if_authorized('Edit', hash_for_edit_organization_path(:id => organization)),
          display_link_if_authorized('Clone', hash_for_clone_organization_path(:id => organization)),
          display_delete_if_authorized(hash_for_organization_path(:id => organization), :confirm => "Delete #{organization.name}?", :action => :destroy),
          (link_to("Select Hosts to Assign to #{organization.name}", assign_hosts_organization_path(organization)) if @count_nil_hosts > 0),
          (link_to("Assign All #{@count_nil_hosts} Hosts with No Organization to #{organization.name}", assign_all_hosts_organization_path(organization),:method => :post) if @count_nil_hosts > 0)
          )%>
      </td>
    </tr>
  <% end %>
</table>
<%= page_entries_info @organizations %>
<%= will_paginate     @organizations %>
