<%= form_for @organization do |f| %>
  <%= base_errors_for @organization %>
  <ul class="nav nav-tabs" data-tabs="tabs">
    <li class="active"><a href="#primary" data-toggle="tab">Organization</a></li>
    <li><a href="#users" data-toggle="tab">Users</a></li>
    <li><a href="#smart_proxies" data-toggle="tab">Smart Proxies</a></li>
    <li><a href="#compute_resources" data-toggle="tab">Compute Resources</a></li>
    <li><a href="#media" data-toggle="tab">Media</a></li>
    <li><a href="#domains" data-toggle="tab">Domains</a></li>
    <li><a href="#hostgroups" data-toggle="tab">Host Groups</a></li>
    <li><a href="#puppetclasses" data-toggle="tab">Puppet Classes</a></li>
    <li><a href="#locations" data-toggle="tab">Locations</a></li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane active" id="primary">
      <%= text_f f, :name, :class => "input-xlarge" %>
   </div>

  <div class="tab-pane" id="users">
    <%= multiple_checkboxes f, :users, @organization, User.where("admin = 'f'"), { :prefix => "organization" } %>
  </div>

  <div class="tab-pane" id="smart_proxies">
    <%= multiple_checkboxes f, :smart_proxies, @organization, SmartProxy, { :prefix => "organization" } %>
  </div>

  <div class="tab-pane" id="compute_resources">
    <%= multiple_checkboxes f, :compute_resources, @organization, ComputeResource, { :prefix => "organization" } %>
  </div>

  <div class="tab-pane" id="media">
    <%= multiple_checkboxes f, :media, @organization, Medium, { :prefix => "organization" } %>
  </div>

  <div class="tab-pane" id="domains">
    <%= multiple_checkboxes f, :domains, @organization, Domain, { :prefix => "organization" } %>
  </div>

  <div class="tab-pane" id="hostgroups">
    <%= multiple_checkboxes f, :hostgroups, @organization, Hostgroup, { :prefix => "organization" } %>
  </div>

  <div class="tab-pane" id="puppetclasses">
    <%= multiple_checkboxes f, :puppetclasses, @organization, Puppetclass, { :prefix => "organization" } %>
  </div>

  <div class="tab-pane" id="locations">
    <%= multiple_checkboxes f, :locations, @organization, Location %>
  </div>

  <%= submit_or_cancel f %>
<% end %>
