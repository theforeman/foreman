<div id="parameters">
  <table class="table table-condensed" id="global_parameters_table">
    <thead>
    <tr>
      <th class='col-md-3'><%= _("Name") %></th>
      <th class='col-md-8'><%= _("Value") %></th>
      <th class='col-md-1 ca'><%= _('Actions') %></th>
    </tr>
    </thead>
    <tbody>
      <%= f.fields_for type do |builder| %>
        <%= render "common_parameters/parameter", :f => builder %>
      <% end %>
    </tbody>
  </table>
  <%= authorized_via_my_scope("host_editing", "create_params") ? link_to_add_fields('+ ' + _("Add Parameter"), f, type, "common_parameters/parameter", :target => '#global_parameters_table tbody') : "" %>
</div>
