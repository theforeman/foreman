<% title "Locations" %>

<% title_actions display_link_if_authorized("New Location", hash_for_new_location_path), help_path %>

<table class="table table-bordered table-striped">
  <tr>
    <th><%= sort :name %></th>
    <th></th>
  </tr>

  <% @locations.each do |location| %>
    <tr class="<%= cycle("even", "odd") -%>">
      <td><%= link_to location.to_label, edit_location_path(location) %></td>
      <td>
        <%= action_buttons(
          display_link_if_authorized('Edit', hash_for_edit_location_path(:id => location), :class => "btn btn-small"),
          display_delete_if_authorized(hash_for_location_path(:id => location), :confirm => "Delete #{location.name}?", :action => :destroy)
        ) %>
      </td>
    </tr>
  <% end %>
</table>
<%= page_entries_info @locations %>
<%= will_paginate     @locations %>
