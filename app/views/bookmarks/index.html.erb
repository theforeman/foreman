<% title _("Bookmarks") %>
<% title_actions documentation_button('4.1.5Bookmarks') %>
<div class="title_action"></div>

<table class="table table-bordered table-striped table-two-pane table-hover">
  <thead>
    <tr>
      <th><%= s_("Bookmark|Name") %></th>
      <th><%= s_("Bookmark|Query") %></th>
      <th><%= s_("Bookmark|Controller") %></th>
      <th><%= s_("Bookmark|Public") %></th>
      <th><%= _('Actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td class="display-two-pane"><%= link_to_if_authorized(trunc_with_tooltip(bookmark.name), hash_for_edit_bookmark_path(bookmark)) %></td>
        <td><%= bookmark.query %></td>
        <td><%= bookmark.controller %></td>
        <td><%= bookmark.public %></td>
        <td align="right">
          <%= display_delete_if_authorized hash_for_bookmark_path(bookmark),
            :data => { :confirm => _("Delete %s?") % bookmark.name } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate_with_info @bookmarks %>
