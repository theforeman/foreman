<%= form_for @model do |f| %>
  <%= base_errors_for @model %>
  <%= text_f f, :name, :label => _("Name") %>
  <%= text_f f, :hardware_model, :label => _("Hardware Model"), :help_block => _("The class of CPU supplied in this machine. This is primarily used by Sparc Solaris builds and can be left blank for other architectures. The value can be determined on Solaris via uname -m") %>
  <%= text_f f, :vendor_class, :label => _("Vendor Class"), :help_block => _("The class of the machine reported by the Open Boot Prom. This is primarily used by Sparc Solaris builds and can be left blank for other architectures. The value can be determined on Solaris via uname -i|cut -f2 -d,") %>
  <%= textarea_f f, :info, :class => "input-xxlarge", :label => _("Info"), :help_block => _("General useful description, for example this kind of hardware needs a special BIOS setup") %>
  <%= submit_or_cancel f %>
<% end -%>
