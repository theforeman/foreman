<% title _("Partition tables") %>
<% title_actions display_link_if_authorized(_("New Partition table layout"), hash_for_new_ptable_path), help_path %>

<table class="table table-bordered table-striped">
  <tr>
    <th><%= sort :name, :as => _("Name") %></th>
    <th><%= _("Family") %></th>
    <th><%= _("Operating Systems") %></th>
    <th></th>
  </tr>
  <% for ptable in @ptables %>
    <tr>
      <td><%= link_to_if_authorized ptable, hash_for_edit_ptable_path(:id => ptable.id) %></td>
      <td><%= ptable.os_family %></td>
      <td><%= ptable.operatingsystems.to_sentence %></td>
      <td>
        <%= display_delete_if_authorized hash_for_ptable_path(:id => ptable), :confirm => _("Delete %s?") % ptable.name%>
      </td>
    </tr>
  <% end %>
</table>
<%= page_entries_info @ptables %>
<%= will_paginate     @ptables %>
