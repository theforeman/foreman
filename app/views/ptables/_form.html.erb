<%= form_for @ptable do |f| %>
  <%= base_errors_for @ptable %>
  <%= text_f f, :name %>
  <%= textarea_f f, :layout, :class => "input-xxlarge",
    :help_block => "<span class='label label-info'>Notice</span> you may use #{link_to 'a script as well', 'http://www.theforeman.org/manuals/1.1/index.html#4.4.4PartitionTables', :rel => 'external'}".html_safe %>
  <%= selectable_f f, :os_family, Operatingsystem.families, { :include_blank => true }, { :label => "Operating System Family" } %>
  <%= submit_or_cancel f %>
<% end %>
