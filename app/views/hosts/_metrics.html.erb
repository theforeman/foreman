<table class="table table-bordered table-striped table-condensed">
  <tr>
    <th>Report Status</th>
    <th></th>
  </tr>
    <% report_summary.each do |name, value| -%>
    <tr>
      <td> <%= name %> </td>
      <% style = (name =~ /failed|failed_restart/ and value > 0) ? "label label-important" : ""-%>
      <td><p class="<%= style %>"> <%= value %> </p></td>
    </tr>
  <% end -%>
</table>
