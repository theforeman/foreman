<div id="host-progress" class="alert alert-block alert-info base in fade hide alert-dismissable">
  <%= alert_close %>
  <h3><%= icon_text("info", "", :kind => "pficon") %><%= action_name.capitalize %> <%= _('in Progress') %></h3>
  <p id="tasks_progress"><%= action_name %> <%= _('in progress') %>.</p>
  <div class="progress active">
    <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
    </div>
  </div>
</div>
