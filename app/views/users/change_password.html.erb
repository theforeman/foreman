<%= javascript 'users', 'password_strength' %>

<% title _("Change Password") %>
<p />
<%= _("You are required to change your password the first time after you log in.") %>
<p />
<%= form_tag update_password_user_path, :method => :put, :class => "form form-horizontal" %>
  <div class="form-group">
      <%= label_tag "login[password]", _("Password"), :required => true, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
        <%= password_field_tag "new_password",nil, :class=>"form-control", :autofocus => true %>
    </div>
  </div>
  <div class="form-group">
      <%= label_tag "login[password]", _("Confirm Password"), :required => true, :class=>"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= password_field_tag "confirm_password",nil, :class=>"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <%= submit_tag _("Change Password"), :class => "btn-primary btn" %>
    </div>
  </div>
</div>

</form>
