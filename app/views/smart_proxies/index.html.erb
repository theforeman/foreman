<% title SETTINGS[:smart_proxy_name].pluralize %>

<% title_actions display_link_if_authorized(_("New %s") % SETTINGS[:smart_proxy_name], hash_for_new_smart_proxy_path) %>


<table class="table table-bordered table-striped table-two-pane">
  <tr>
    <th><%= s_("%s|Name") % SETTINGS[:smart_proxy_name] %></th>
    <th><%= s_("%s|Url") % SETTINGS[:smart_proxy_name] %></th>
    <th><%= _("Features") %></th>
    <th></th>
  </tr>
  <% for proxy in @smart_proxies %>
    <tr>
      <td><%= link_to_if_authorized proxy.name, hash_for_edit_smart_proxy_path(:id => proxy.id).merge(:auth_object => proxy, :authorizer => authorizer) %></td>
      <td><%=h proxy.url %></td>
      <td><%=h proxy.features.to_sentence %></td>
      <td><%= action_buttons(*proxy_actions(proxy, authorizer)) %></td>
    </tr>
  <% end %>
</table>

<%= page_entries_info @smart_proxies %>
<%= will_paginate @smart_proxies %>
