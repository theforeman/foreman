<tr>
  <th>
    <%= _('Hostname') %>
  </th>
  <th>
    <%= _('Host group') %>
  </th>
  <th>
    <%= _('Environment') %>
  </th>
  <th>
    <%= _('Last Report') %>
  </th>
</tr>
<% list.each do |host| %>
  <tr>
    <%= render 'link_to_host', :host => host %>
    <td class="hosts-rows">
      <%= host.hostgroup %>
    </td>
    <td class="hosts-rows">
      <%= host.environment %>
    </td>
    <% if host.last_report %>
      <td class="hosts-rows">
        <%= time_ago_in_words(host.last_report) %>
      </td>
    <% else %>
      <td class="hosts-rows">
        <%= _('Unknown') %>
      </td>
    <% end %>
  </tr>
<% end %>
